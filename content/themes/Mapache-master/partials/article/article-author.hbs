{{#post}}

<div class="post-author u-flex u-flexCenter">
    {{!-- author Avatar --}}
    {{#primary_author}}
    <div class="u-flex0">
        <a href="{{url}}" class="avatar-image avatar-image--smaller u-relative">
            <img class="u-absolute u-image u-block u-round" src="{{#if profile_image}}{{img_url profile_image size="xs"}}{{else}}{{asset "images/avatar.png"}}{{/if}}" alt="{{t "Go to the profile of "}} {{name}}"/>
        </a>
    </div>
    {{/primary_author}}

    <div class="u-paddingLeft15 u-textColorNormal u-flex1 u-fontSizeSmaller u-lineHeight1">

        {{!-- Datetime - readingTime  --}}
        <div class="u-block">
            <time class="datetime" datetime="{{date format=" YYYY-MM-DD "}}">{{t "Published"}} {{date published_at timeago="true"}}</time>
            <span class="point">â€”</span>
            <span class="readingTime">{{reading_time seconds=(t "< 1 min read") minute=(t "1 min read") minutes=(t "% min read")}}</span>
        </div>

        {{#primary_author}}

        <div class="u-block u-paddingTop5">
            {{t "By"}} <a href="{{url}}" class="link link--underline u-fontWeightMedium u-textColorDarker" title="{{t "Posts by"}} {{name}}">{{name}}</a>

            {{!-- Author Social Media (Facebook - Twitter) --}}
            {{#if facebook}}<a class="post-author-social u-fontSizeBase u-inlineBlock c-facebook i-facebook" href="{{facebook_url}}" title="Facebook" target="_blank" rel="noopener noreferrer"></a>{{/if}}
            {{#if twitter}}<a class="post-author-social u-fontSizeBase u-inlineBlock c-twitter i-twitter" href="{{twitter_url}}" title="{{twitter}}" target="_blank" rel="noopener noreferrer"></a>{{/if}}
        </div>

        {{/primary_author}}
    </div>
</div>

{{/post}}
