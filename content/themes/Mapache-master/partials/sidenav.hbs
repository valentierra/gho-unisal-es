<aside class="sideNav u-absolute0 u-hide-after-lg">
    <div class="sideNav-wrap u-absolute0">
        {{!-- Menu --}}
        <nav class="sideNav-menu">
            <ul class="u-unstyled" role="menu">
                {{navigation}}
            </ul>
        </nav>

        {{!--follow box --}}
        <div class="sideNav-follow js-social-media u-fontSize20 u-paddingTop20 u-paddingLeft20 u-paddingRight20">
            {{#if @site.facebook}} <a title="Facebook {{@site.facebook}}" href="{{facebook_url}}" target="_blank" rel="noopener noreferrer" class="i-facebook"></a>{{/if}}
            {{#if @site.twitter}} <a title="Twitter {{@site.twitter}}" href="{{twitter_url}}" target="_blank" rel="noopener noreferrer" class="i-twitter"></a>{{/if}}
        </div>
    </div>
</aside>
