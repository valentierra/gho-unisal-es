{{#if @labs.subscribers}}
<div class="modal modal-subscribe u-flexColumn u-flexCenter u-fixed u-absolute0">
    <div class="modal-shader u-absolute0 zindex1"></div>

    {{!-- Popup card --}}
    <div class="modal-inner u-relative u-textAlignCenter zindex2">
        <a href="#" class="js-toggle-modal modal-close u-textColorNormal u-fontSizeLarger i-close"></a>
        <h2 class="u-fontSizeLarger u-marginBottom20">{{t "Sign Up To The Newsletter"}}</h2>
        <label  class="u-marginBottom30 u-fontSizeSmall u-block u-marginAuto" for="modalSubscribeUsername">{{t "Stay up to date! Get all the latest & greatest posts delivered straight to your inbox"}}</label>

        {{!-- form --}}
        {{subscribe_form
            form_class="modal-form u-marginBottom15"
            input_id="modalSubscribeUsername"
            input_class="form--input u-block u-fontSize20 u-textAlignCenter"
            button_class="subscribe-btn button button--dark u-fontSizeSmaller u-textUppercase"
            placeholder=(t "Your email address")
            autofocus=""
        }}
    </div>
</div>
{{/if}}
