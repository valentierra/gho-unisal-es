{{#if @labs.subscribers}}
<div class="sidebar-items witget-subscribe u-marginBottom30 u-textAlignCenter">
    <h5 class="u-fontSizeBase u-textColorDarker u-marginBottom20 u-fontWeightBold">{{t "Newsletter"}}</h5>
    <label class="u-fontSizeSmaller u-marginBottom20" for="sidebarSubscribeUsername">{{t "Get the latest posts delivered right to your inbox"}}</label>

    {{subscribe_form
    form_class="witget-subscribe--form"
    input_id="sidebarSubscribeUsername"
    input_class="u-fontSizeSmaller u-block u-marginBottom10"
    button_class="button i-send u-textColorWhite u-textUppercase"
    placeholder=(t "Your email address")
    autofocus=""
    }}
</div>
{{/if}}
